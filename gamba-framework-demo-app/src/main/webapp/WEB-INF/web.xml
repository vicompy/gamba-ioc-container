<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">

	<display-name>gamba-framework-demo-app</display-name>

	<servlet>
		<servlet-name>GambaFrontController</servlet-name>
		<servlet-class>org.homs.gamba.frontcontroller.GambaFrontController</servlet-class>
		<init-param>
			<param-name>actions-base-package</param-name>
			<param-value>org.homs.demo.controllers</param-value>
		</init-param>
		<init-param>
			<param-name>view-resource-prefix</param-name>
			<param-value>/jsp/</param-value>
		</init-param>
		<init-param>
			<param-name>view-resource-postfix</param-name>
			<param-value>.jsp</param-value>
		</init-param>
		<init-param>
			<param-name>jdbc-pooling-config</param-name>
			<param-value>org.homs.demo.config.MyConnection</param-value>
		</init-param>
		
	</servlet>

	<servlet-mapping>
		<servlet-name>GambaFrontController</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>

</web-app>